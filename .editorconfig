# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.php]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[{package.json,.travis.yml,swapper.yml}]
indent_style = space
indent_size = 2

[{composer.json}]
indent_style = space
indent_size = 4
